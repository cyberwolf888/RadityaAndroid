<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mangpande.radityaholding">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainMenu" />
        <activity android:name=".Tagihan" />
        <activity android:name=".KreditBaru" />
        <activity android:name=".LihatKredit" />
        <activity
            android:name=".Login"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DashboardPetugas"
            android:label="@string/title_activity_dashboard_petugas"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".TambahKredit"
            android:label="@string/title_activity_tambah_kredit"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Detail"
            android:label="@string/title_activity_detail"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".TagihanKredit"
            android:label="@string/title_activity_tagihan_kredit"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>