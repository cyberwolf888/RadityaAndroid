<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.mangpande.radityaholding.DashboardPetugas"
    tools:showIn="@layout/activity_dashboard_petugas"
    android:weightSum="1">

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:id="@+id/ibTagihan"
        android:onClick="tagihan"
        android:background="@drawable/btn_menu_tagihan"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/ibLihatKredit"
        android:onClick="lihatkredit"
        android:background="@drawable/btn_menu_lihatt"
        android:layout_below="@+id/ibTagihan"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@+id/ibTagihan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Raditya Holding"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/logoo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
